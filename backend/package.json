{
  "name": "mayoor-backend",
  "version": "1.0.0",
  "description": "order management system backend",
  "scripts": {
    "start": "NODE_ENV=production node dist/server",
    "clean": "rm -rf dist",
    "build": "npm -s run clean && npm -s run generate && tsc",
    "generate": "npm -s run generate:prisma && npm -s run generate:nexus",
    "generate:prisma": "npx prisma generate",
    "generate:nexus": "cross-env NODE_ENV=development ts-node --transpile-only src/schema",
    "postinstall": "npm -s run generate",
    "dev": "ts-node-dev --no-notify --respawn --transpileOnly src/server",
    "apollo:push": "apollo service:push --endpoint=http://localhost:4444/graphql",
    "database:migrate": "npx prisma migrate up --experimental",
    "database:seed": "ts-node ./prisma/seed.ts",
    "start:full": "npm run database:migrate && npm run database:seed && npm run start",
    "lint": "npm run lint:tsc && npm run lint:eslint",
    "lint:tsc": "tsc",
    "lint:eslint": "eslint './src/**/*.{ts,tsx}'",
    "lint:fix": "eslint './src/**/*.{ts,tsx}' --fix"
  },
  "keywords": [
    "order",
    "management"
  ],
  "author": "rostaklein",
  "license": "ISC",
  "dependencies": {
    "@nexus/schema": "^0.14.0",
    "@prisma/cli": "^2.10.2",
    "@prisma/client": "^2.10.2",
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.2",
    "@types/jsonwebtoken": "^8.3.7",
    "@types/node": "^12.12.26",
    "@types/ws": "6.0.4",
    "@types/xml2js": "^0.4.5",
    "apollo-server-express": "^2.14.2",
    "bcrypt": "^5.0.0",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^14.7.0",
    "graphql-middleware": "^4.0.2",
    "graphql-shield": "^7.0.11",
    "jsonwebtoken": "^8.5.1",
    "nexus-plugin-prisma": "^0.23.1",
    "node-fetch": "^3.1.1",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.2",
    "prettier": "^2.0.2",
    "ts-node-dev": "1.0.0-pre.44"
  },
  "prettier": {
    "singleQuote": true,
    "semi": true,
    "trailingComma": "all"
  },
  "engines": {
    "node": ">=10.0.0"
  }
}
